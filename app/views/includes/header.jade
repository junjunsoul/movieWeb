.container
    .row
        .page-header
            h1 #{title}
            small 重度科幻迷
.navbar.navbar-default.navbar-fixed-bottom
    .container
        .navbar-header
            a.navbar-brand(href="/") 重度科幻迷
        if(user)
            p.navbar-text.navbar-right
                span 欢迎您,#{user.name}
                span &nbsp;|&nbsp;
                a.navbar-link(href="/loginout") 登出
        else    
            p.navbar-text.navbar-right
                a.navbar-link(href="#",data-toggle="modal",data-target="#singnupModal") 注册
                span &nbsp;|&nbsp;
                a.navbar-link(href="#",data-toggle="modal",data-target="#singninModal") 登录
#singnupModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="post",action="/user/singnup")
                .modal-header 注册
                .modal-body
                    .from-group
                        label(for="singnupName") 用户名
                        input#singnupName.form-control(name="user[name]",type="text")
                    .from-group
                        label(for="singnupPassword") 密码
                        input#singnupPassword.form-control(name="user[password]",type="text")
                .modal-footer
                    button.btn.btn-default(type="button",data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 提交
#singninModal.modal.fade
    .modal-dialog
        .modal-content
            form(method="post",action="/user/singnin")
                .modal-header 登录
                .modal-body
                    .from-group
                        label(for="singninName") 用户名
                        input#singnupName.form-control(name="user[name]",type="text")
                    .from-group
                        label(for="singninPassword") 密码
                        input#singninPassword.form-control(name="user[password]",type="text")
                .modal-footer
                    button.btn.btn-default(type="button",data-dismiss="modal") 关闭
                    button.btn.btn-success(type="submit") 登录