extends ../layout
block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 用户名
                        th 创建时间
                        th 更新
                        th 删除
                tbody
                    each item in users
                        tr(class="item-id-#{item._id}")
                            td #{item.name}
                            td #{moment(item.meta.createAt).format('L')}
                            td: a(target="_blank",href="../movie/update/#{item._id}") 修改
                            td: button.btn.btn-danger.del(type="button",data-id="#{item._id}") 删除
    script(src="/js/user.js")
